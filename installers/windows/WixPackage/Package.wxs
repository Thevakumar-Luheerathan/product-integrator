<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs"
  xmlns:util="http://wixtoolset.org/schemas/v4/wxs/util"
  xmlns:ui="http://wixtoolset.org/schemas/v4/wxs/ui">
  <Package Name="WSO2 Integrator"
    Version="1.0.0"
    Manufacturer="WSO2"
    UpgradeCode="344b046a-fa6a-4452-be40-2794f59fe7b0"
    InstallerVersion="500"
    Compressed="yes"
  >
    <Binary Id="ExtActionsDll" SourceFile="..\CustomAction1\bin\Debug\net472\CustomAction1.CA.dll" />
    <CustomAction Id="clearCurrentActiveBallerinaVersionCA" BinaryRef="ExtActionsDll"
      DllEntry="clearCurrentActiveBallerinaVersion" Execute="deferred" Impersonate="no"
      Return="check" />
    <InstallExecuteSequence>
      <Custom Action="clearCurrentActiveBallerinaVersionCA" After="InstallFiles" />
    </InstallExecuteSequence>

    <MajorUpgrade DowngradeErrorMessage="!(loc.DowngradeError)" />
    <MediaTemplate EmbedCab="yes" />

    <ui:WixUI Id="WixUI_InstallDir" InstallDirectory="INSTALLFOLDER" />

    <!-- <UI>
      <UIRef Id="WixUI_InstallDir" />
      <Publish Dialog="WelcomeDlg" Control="Next" Event="NewDialog" Value="InstallDirDlg">NOT
        Installed</Publish>
      <Publish Dialog="InstallDirDlg" Control="Back" Event="NewDialog" Value="WelcomeDlg" Order="2">
        1</Publish>
      <Publish Dialog="InstallDirDlg" Control="Next" Event="NewDialog" Value="PrepareDlg" Order="5">
        WIXUI_DONTVALIDATEPATH OR WIXUI_INSTALLDIR_VALID="1"
      </Publish>
    </UI> -->

    <WixVariable Id="WixUILicenseRtf" Value=".\resources\LICENSE.rtf" />
    <WixVariable Id="WixUIBannerBmp" Value=".\resources\Banner.jpg" />
    <WixVariable Id="WixUIDialogBmp" Value=".\resources\Dialog.jpg" />

    <Feature Id="Main">
      <ComponentGroupRef Id="IntegratorComponents" />
      <ComponentGroupRef Id="BallerinaComponents" />
      <ComponentRef Id="IntegratorShortcutComponent" />
      <ComponentRef Id="BallerinaEnvironmentComponent" />
      <!-- <ComponentGroupRef Id="SettingsComponents" /> -->
    </Feature>

  </Package>
</Wix>