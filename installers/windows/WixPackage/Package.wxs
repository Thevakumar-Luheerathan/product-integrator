  <Package Name="WSO2 Integrator"
    Version="1.0.0.0"
    Manufacturer="WSO2"
    UpgradeCode="344b046a-fa6a-4452-be40-2794f59fe7b0"
    InstallerVersion="500"
    Compressed="yes"
  >
    <Binary Id="ExtActionsDll" SourceFile="..\CustomAction1\bin\Debug\net472\CustomAction1.CA.dll" />
    <CustomAction Id="copySettingsFileToUserhomeCA" BinaryRef="ExtActionsDll"
      DllEntry="copySettingsFileToUserhome" Execute="deferred" Impersonate="no" Return="check" />
